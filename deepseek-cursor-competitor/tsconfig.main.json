{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "noEmit": false,
    "outDir": "dist/main",
    "target": "ES2020",
    "lib": ["ES2020"]
  },
  "include": [
    "src/main/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "release",
    "src/renderer",
    "src/preload"
  ]
}
