{
  "name": "deepseek-cursor-competitor",
  "version": "0.1.0",
  "description": "AI-powered code editor using DeepSeek that competes with Cursor IDE",
  "main": "dist/main/main.js",
  "homepage": "./",
  "author": "Your Name",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .",
    "build": "npm run build:vite && npm run build:electron && npm run build:preload",
    "build:vite": "vite build",
    "build:electron": "tsc -p tsconfig.main.json",
    "build:preload": "tsc src/preload/preload.ts --outDir dist/preload --target ES2020 --module CommonJS --moduleResolution node",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux",
    "pack": "npm run build && electron-builder --dir",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@heroicons/react": "^2.0.18",
    "@monaco-editor/react": "^4.6.0",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/xterm": "^5.5.0",
    "axios": "^1.6.2",
    "chokidar": "^3.5.3",
    "dotenv": "^17.2.1",
    "electron-store": "^8.1.0",
    "fuse.js": "^7.1.0",
    "lucide-react": "^0.540.0",
    "lunr": "^2.3.9",
    "node-ipc": "^12.0.0",
    "openai": "^5.12.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "simple-git": "^3.20.0",
    "sqlite3": "^5.1.7",
    "typescript-language-server": "^4.4.0",
    "uuid": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12",
    "vscode-uri": "^3.1.0",
    "web-tree-sitter": "^0.25.8",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/node": "^20.19.11",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "@types/uuid": "^9.0.8",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "@vitejs/plugin-react": "^4.1.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^27.1.3",
    "electron-builder": "^24.6.4",
    "electron-devtools-installer": "^3.2.0",
    "eslint": "^8.54.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.0",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.9.2",
    "vite": "^5.0.5",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.yourname.deepseek-cursor-competitor",
    "productName": "DeepSeek Cursor Competitor",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
